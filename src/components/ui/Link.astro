---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
}

const { href, class: _class, ...props } = Astro.props;
---

<a
  class:list={[
    "bg-spotify-green text-black rounded-3xl font-bold py-2 px-4 hover:scale-105 transition-all",
    _class,
  ]}
  href={href}
  {...props}
>
  <slot />
</a>
