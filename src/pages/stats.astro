---
import Layout from "@/layouts/Layout.astro";
import StatsComponent from "@/components/stats/Stats.svelte";
---

<Layout title="Stats" description="Get your stats right here!">
  <StatsComponent client:only="svelte" />
</Layout>

<script define:vars={{ baseUrl: import.meta.env.BASE_URL }} is:inline>
  const data = localStorage.getItem("auth_object");

  if (!data) {
    window.location.href = `${baseUrl}/`;
  }
</script>
